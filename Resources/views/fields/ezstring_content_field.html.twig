{% extends "EzPublishCoreBundle::content_fields.html.twig" %}

{% block ezstring_field %}
{% spaceless %}
    {% if field.value.text is not empty %}
        {% set field_value = field.value.text %}
        {% set reader = field.value.text|bc_document_reader( null, 'Detected by: bc_document_reader twig filter use within the ezstring_content_field.html.twig template' ) %}
        {{ block( 'simple_inline_field' ) }}
    {% endif %}
{% endspaceless %}
{% endblock %}
